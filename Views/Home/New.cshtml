@{
    ViewData["Title"] = "Create a Post";
}
@model Hobby
<h1>Create a Post. </h1>

<form asp-action="Create" asp-controller="Home" method="POST">

    <span asp-validation-for="Name"></span>  
    <h4>Title:</h4>

    <label for="inp" class="inp">
        <input type="text" id="inp" placeholder="&nbsp;" class="Form-Control" asp-for="Name">
        <span class="label"></span>
        <span class="focus-bg"></span>
    </label>
    <br>

    <span asp-validation-for="Description"></span>    
    <h4>Description:</h4>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="10" asp-for="Description"></textarea>


    <br>

    <button class="btn btn-primary" type="submit">Submit</button>
</form>






















































